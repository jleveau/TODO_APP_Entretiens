{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "lib": [
    "es2015"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*"
  ]
}